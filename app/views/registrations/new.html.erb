<h1> Sing Up</h1>

<%= form_with model: @user , url: registrations_path do | form | %>
    <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
    </div>
    
    <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
    </div>
    <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
    </div>
    <div>
    <%= form.label :lastname %>
    <%= form.text_field :lastname %>
    </div>
    
    <div>
        <%= form.submit "Sign Up" %>
    </div>

<%= link_to "Login", new_login_path  %>

<% end %>