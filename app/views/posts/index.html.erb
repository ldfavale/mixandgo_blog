
<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <p>
      <%= link_to "#{post.title}", post %> - 
      <%= "#{post.user.name} #{post.user.lastname}" %> 
    </p>
    <hr>
  <% end %>
</div>

<%= link_to "New post", new_post_path if session[:user_id] %>
<%= link_to "Login", new_login_path unless session[:user_id] %>
